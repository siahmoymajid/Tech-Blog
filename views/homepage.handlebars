{{#each post as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->

        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>

      <p>Created by {{post.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{post.content}}
      </p>
    </div>
  </div>
{{/each}}