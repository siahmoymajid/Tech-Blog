

<div class="post-list">
<h2>{{message}}</h2>
{{#each posts as |post|}}

<div class="card mb-4">
  <div class="card-header text-light bg-dark d-flex justify-content-between align-items-center px-4 py-2">
      <h2 class="fs-4">
        <a class="link-light" href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
     <div class="fs-6">Created by {{post.user.username}} on {{format_date post.createdAt}}</div>
  </div>
<div class="card-body p-4">
        {{post.content}}
    </div>

  </div>
{{/each}}
</div>
<hr>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 class="fs-4">Create a post:</h3>

    <form class="form new-post-form">
      <div class="mb-3">
        <label for="post-title"> post title:</label>
        <input class="form-control" type="text" id="post-title" name="post-title" />
      </div>
     
      <div class="mb-3">
        <label for="post-content">content:</label>
        <textarea class="form-control" id="post-content" name="post-content"></textarea>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-dark">Create</button>
      </div>
    </form>
  </div>


  <script src="/js/new-post.js"></script>